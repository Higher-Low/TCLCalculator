{
  "manifest_version": 3,
  "name": "TCL Calculator",
  "version": "1.0.0",
  "description": "Calculateur de Trading avec Gestion des Risques - Extension Chrome",
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Ouvrir TCL Calculator"
  },
  "background": {
    "service_worker": "extension.js"
  },
  "permissions": ["sidePanel", "storage", "clipboardWrite"],
  "host_permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "32": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  }
}
